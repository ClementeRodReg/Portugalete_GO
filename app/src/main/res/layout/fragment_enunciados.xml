<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/portu_white"
    android:id="@+id/fragment_enunciados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="673dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/portu_white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/pergamino"
            app:cardCornerRadius="30sp"
            >
            <LinearLayout
                android:id="@+id/LayoutPreguntas"
                android:layout_width="350dp"
                android:layout_height="600dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/pergamino"
                android:outlineSpotShadowColor="@color/pergamino"
                app:cardCornerRadius="30sp"
                >
                <TextView
                    android:id="@+id/textoJuegos"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:text="ENUNCIADO"
                    android:textSize="40sp"
                    android:background="@color/pergamino"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>